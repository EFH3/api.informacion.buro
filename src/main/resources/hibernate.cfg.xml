         sys
      </property>
      
      <property name = "hibernate.connection.password">
         As123456
      </property>
      
      <!-- List of XML mapping files -->
      <!--mapping resource = "Bodegas.hbm.xml"/-->
      
      <!-- List of Classes mapping files -->
      <mapping class="com.coppel.entities.Bodegas" />
      
